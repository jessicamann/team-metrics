<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.js"></script>
    <title>Feature Progress</title>
</head>
<body>
<%- include("./navbar.ejs", {active: "progress", dataSet: dataSet}) %>
<% if (features.length > 0) { %>
    <div class="container is-fluid mt-4">
        <div style="display: flex; flex-flow: row wrap; justify-content: space-around;">
            <% features.forEach(function(feature, index){ %>
                <div style="width: 45vw">
                    <%- include('aFeature.fragment.ejs', {chart: feature, id: "feature"+index}); %>
                </div>
            <% }); %>
        </div>
    </div>
<% } else { %>
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Oop! Missing information to produce feature progress charts.
                </h1>
                <h2 class="subtitle">
                    Please upload new data with "feature" for each work item.
                </h2>
            </div>
        </div>
    </section>
<% } %>
</body>
</html>
