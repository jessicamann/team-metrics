{
    "packages": [
        "nodejs@18.16.0"
    ],
    "env": {
        "TESTCONTAINERS_DOCKER_SOCKET_OVERRIDE": "/var/run/docker.sock"
    },
    "shell": {
        "init_hook": [
            "export DOCKER_HOST=unix://$(podman machine inspect --format '{{.ConnectionInfo.PodmanSocket.Path}}')"
        ]
    }
}
